{
  "name": "volaron-store-backend",
  "version": "1.0.0",
  "description": "Volaron Store - MedusaJS Backend with AI Integration",
  "keywords": [
    "medusajs",
    "ecommerce",
    "volaron",
    "ai",
    "gemini",
    "mcp",
    "railway"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/exzosdigital/volaron-project"
  },
  "license": "MIT",
  "author": "Exzos Digital",
  "main": "index.js",
  "scripts": {
    "build": "npm install",
    "deploy": "node scripts/deploy-and-monitor.js",
    "deploy:simple": "railway deploy",
    "dev": "nodemon index.js",
    "health": "curl -f http://localhost:3000/health || curl -f https://backend-production-c461d.up.railway.app/health",
    "postinstall": "echo 'Volaron Store Backend instalado com sucesso!'",
    "lint": "eslint .",
    "logs": "railway logs --tail 50",
    "mcp:health": "node scripts/check-mcp-health.js",
    "mcp:start": "node scripts/start-mcp-servers.js",
    "monitor": "node monitoring/continuous-monitor.js",
    "setup": "node scripts/setup-environment.js",
    "start": "node index.js",
    "status": "railway status",
    "test": "jest",
    "test:endpoints": "node scripts/test-endpoints.js",
    "vars": "railway variables",
    "verify:config": "bash scripts/verify-railway-config.sh"
  },
  "dependencies": {
    "@google/generative-ai": "latest",
    "@medusajs/admin": "^7.1.0",
    "@medusajs/cache-redis": "^1.8.0",
    "@medusajs/event-bus-redis": "^1.8.0",
    "@medusajs/file-local": "^1.0.0",
    "@medusajs/medusa": "^1.20.0",
    "@medusajs/medusa-cli": "^1.3.0",
    "@modelcontextprotocol/sdk": "latest",
    "axios": "latest",
    "child_process": "latest",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "latest",
    "fs": "latest",
    "helmet": "^7.1.0",
    "http": "latest",
    "https": "latest",
    "joi": "^17.11.0",
    "lucide-react": "^0.454.0",
    "next": "15.2.4",
    "path": "latest",
    "pg": "^8.11.0",
    "rate-limiter-flexible": "^3.0.0",
    "react": "^19",
    "react-dom": "^19",
    "readline": "latest",
    "redis": "^4.6.0",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7",
    "typeorm": "^0.3.17",
    "util": "latest",
    "uuid": "^9.0.0",
    "winston": "^3.11.0",
    "ws": "^8.14.0"
  },
  "devDependencies": {
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.0",
    "postcss": "^8.5",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "railway": {
    "build": {
      "command": "npm install && npm run build"
    },
    "deploy": {
      "command": "npm start"
    }
  }
}